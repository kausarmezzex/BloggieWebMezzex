@{
    ViewData["Title"] = "Page Not Found";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card text-center" style="width: 25rem;">
        <div class="card-body">
            <h1 class="card-title">Page Not Found</h1>
            <p class="card-text">The page you are looking for might have been removed, had its name changed, or is temporarily unavailable.</p>
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Go to Home Page</a>
        </div>
    </div>
</div>
