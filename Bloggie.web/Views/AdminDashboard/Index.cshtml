@model Bloggie.web.Models.ViewModel.HomeViewModel
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> signInManager
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "AdminLayout";
}

@{
    int nextPage = Convert.ToInt32(ViewBag.PageNumber) + 1;
    int prevPage = Convert.ToInt32(ViewBag.PageNumber) - 1;
}

<main class="content px-3 py-4">
    <div class="container-fluid">
        <div class="mb-3">
            <h3 class="fw-bold fs-4 mb-3">Welcome to the Admin Dashboard</h3>
            <div class="row">
                <div class="col-12 col-md-4 mb-4">
                    <div class="card shadow-sm border-0 h-100">
                        <div class="card-body py-4">
                            <h5 class="mb-2 fw-bold">User Statistics</h5>
                            <p class="mb-2">Total Registered Users: <span class="fw-bold">@ViewBag.NumberOfUsers</span></p>
                            <div class="mb-0">
                                <span class="badge bg-success text-white me-2">+9.0%</span>
                                <span class="fw-bold">Increase from Last Month</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-md-4 mb-4">
                    <div class="card shadow-sm border-0 h-100">
                        <div class="card-body py-4">
                            <h5 class="mb-2 fw-bold">Post Metrics</h5>
                            <p class="mb-2">Total Published Posts: <span class="fw-bold">@ViewBag.NumberOfPosts</span></p>
                            <div class="mb-0">
                                <span class="badge bg-success text-white me-2">+9.0%</span>
                                <span class="fw-bold">Increase from Last Month</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-md-4 mb-4">
                    <div class="card shadow-sm border-0 h-100">
                        <div class="card-body py-4">
                            <h5 class="mb-2 fw-bold">Engagement Overview</h5>
                            <p class="mb-2">Total Post Views: <span class="fw-bold">$72,540</span></p>
                            <div class="mb-0">
                                <span class="badge bg-success text-white me-2">+9.0%</span>
                                <span class="fw-bold">Increase from Last Month</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <h3 class="fw-bold fs-4 my-3">Average Agent Earnings</h3>
            <div class="row">
                <div class="col-12">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr class="table-primary">
                                    <th scope="col">#</th>
                                    <th scope="col">First</th>
                                    <th scope="col">Last</th>
                                    <th scope="col">Handle</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <th scope="row">1</th>
                                    <td>Mark</td>
                                    <td>Otto</td>
                                    <td>@Html.Raw("@mdo")</td>
                                </tr>
                                <tr>
                                    <th scope="row">2</th>
                                    <td>Jacob</td>
                                    <td>Thornton</td>
                                    <td>@Html.Raw("@fat")</td>
                                </tr>
                                <tr>
                                    <th scope="row">3</th>
                                    <td colspan="2">Larry the Bird</td>
                                    <td>@Html.Raw("@twitter")</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<style>
    .card {
        transition: transform 0.2s;
    }

        .card:hover {
            transform: scale(1.02);
        }

    .table-striped > tbody > tr:nth-of-type(odd) {
        background-color: rgba(0, 0, 0, 0.05);
    }
</style>
